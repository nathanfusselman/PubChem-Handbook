<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.pubchem_chemistry_handbook.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_ptable"
        android:name="com.example.pubchem_chemistry_handbook.ui.pTable.pTableFragment"
        android:label="@string/title_ptable"
        tools:layout="@layout/fragment_ptable" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.pubchem_chemistry_handbook.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.pubchem_chemistry_handbook.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/navigation_compFrag"
        android:name="com.example.pubchem_chemistry_handbook.ui.search.CompFragment"
        android:label="compFrag"
        tools:layout="@layout/fragment_comp" />
    <fragment
        android:id="@+id/navigation_pSearch"
        android:name="com.example.pubchem_chemistry_handbook.ui.pSearch.pSearchFragment"
        android:label="pSearchFrag"
        tools:layout="@layout/fragment_ptable_search" />
</navigation>